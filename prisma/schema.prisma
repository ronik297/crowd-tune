generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  name        String?
  email       String?     @unique
  provider    Provider
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  streams     Stream[]
  upvotes     Upvote[]
}

model Stream {
  id          String      @id @default(cuid())
  type        StreamType
  url         String
  extractedId String
  active      Boolean     @default(true)
  upvotes     Upvote[]
  userId      String
  user        User        @relation(fields: [userId], references: [id])
}

model Upvote {
  id          String      @id @default(cuid())
  userId      String
  streamId    String
  user        User        @relation(fields: [userId], references: [id])
  stream      Stream      @relation(fields: [streamId], references: [id])
  @@unique([userId, streamId])
}

enum StreamType {
  Spotify 
  Youtube
}

enum Provider {
  GOOGLE
  GITHUB
}
